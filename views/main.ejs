<html>
<head>
  <title>Domain Search</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <section>
    <div class="container mx-auto px-4 sm:px-8">
      <div class="py-8">
        <div>
          <h2 class="text-2xl font-semibold leading-tight">Search Domain Availability</h2>
          <div>
            <form action="/response" method="POST" class="grid grid-cols-12 gap-2">
              <div class="col-span-10">
                <div class="p-2">
                  <input type="text" class="relative outline-none rounded py-3 px-3 w-full bg-white shadow text-sm text-gray-700 placeholder-gray-400 focus:outline-none focus:shadow-outline" placeholder="placeholder" name="name" />
                </div>
              </div>
              <div class="col-span-2">
                <div class="p-2">
                  <button class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded" type="submit">
                    Search
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>
</html>